<controls:BaseControl 
             x:Class="Client.Controls.LeaderboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:controls="clr-namespace:Client.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Loaded="Grid_Loaded">
        <Button x:Name="btLeaderboardBack" Content="Back" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="160" Background="White" BorderBrush="#FFCDCDCD" Foreground="#DD464646" Click="btLeaderboardBack_Click"/>
        <Label Content="Leaderboard" HorizontalAlignment="Center" Margin="140,50,140,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Width="397" HorizontalContentAlignment="Center"/>
        <ScrollViewer HorizontalAlignment="Center" Margin="117,97,101,91" VerticalAlignment="Top" Width="582">
            <StackPanel x:Name="spLeaderboard" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True"/>
        </ScrollViewer>
    </Grid>
</controls:BaseControl>
